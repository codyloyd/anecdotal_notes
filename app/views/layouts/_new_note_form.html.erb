<%= form_for @note do |f| %>
<%= f.text_area :content, autofocus: true%><br>
<%= f.text_field :tag_list, placeholder: "add context tags (separated by comma)"%>
<% if @selected_class %>
<%= f.select :student_id, @selected_class.students.collect{|p| [p.name, p.id]} %>
<% else %>
<%= f.select :student_id, current_user.students.collect{|p| [p.name, p.id]} %>
<% end %>
<%= f.submit "create note" %>
<% if @selected_class %>
<%= link_to @selected_class.name,  @selected_class, class: "goto-class-link"%>
<% end %>
<% end %>
